#Driver for standalone P(k) code
#PKDRIVER	= driver_modpk.f90
PKDRIVER	= multimodecode_driver.f90


F90FLAGS      = $(FFLAGS)
LINKERFLAGS   = $(LINKFLAGS)

MODPKOBJ = dvode_f90_m.o \
					 csv_file.o \
					 modpk_errorhandling.o \
					 modpk_io.o \
					 modpk_modules.o modpk_numerics.o \
					 modpk_qsf.o modpk_rng.o \
					 modpk_reheat.o \
  				 modpk_potential.o modpk_sampling.o \
					 modpk_utils.o  modpk_odeint.o \
					 modpk_backgrnd.o modpk.o modpk_deltaN.o


default: powspec

dvode_f90_m.o: dvode_f90_m.f90
csv_file.o: csv_file.f90 csv_file_1d.f90 csv_file_2d.f90
modpk_io.o: modpk_io.f90 csv_file.o
modpk_errorhandling.o: modpk_errorhandling.f90 modpk_io.o
modpk_modules.o: modpk_modules.f90 csv_file.o modpk_io.o modpk_errorhandling.o
modpk_rng.o: modpk_modules.o modpk_rng.f90 modpk_errorhandling.o
modpk_numerics.o: modpk_numerics.f90 modpk_modules.o modpk_errorhandling.o
modpk_qsf.o: modpk_qsf.f90 modpk_modules.o modpk_numerics.o modpk_errorhandling.o
modpk_potential.o: modpk_modules.o modpk_potential.f90 modpk_qsf.o modpk_errorhandling.o modpk_macros.f90
modpk_deltaN.o: modpk_deltaN.f90 modpk_modules.o modpk_potential.o modpk_errorhandling.o
modpk_sampling.o: modpk_modules.o modpk_potential.o modpk_rng.o modpk_sampling.f90 \
	modpk_errorhandling.o modpk_io.o modpk_deltaN.o modpk_macros.f90
modpk_reheat.o: modpk_reheat.f90 modpk_errorhandling.o modpk_modules.o modpk_potential.o modpk_deltaN.o
modpk_utils.o: modpk_modules.o modpk_potential.o modpk_sampling.o modpk_utils.f90 \
 	modpk_errorhandling.o modpk_reheat.o modpk_deltaN.o modpk_macros.f90
modpk_odeint.o:  modpk_modules.o modpk_io.o modpk_io.o modpk_potential.o modpk_sampling.o \
 	modpk_utils.o dvode_f90_m.o modpk_errorhandling.o modpk_reheat.o modpk_odeint.f90 modpk_modules.f90
modpk_backgrnd.o: modpk_odeint.o modpk_backgrnd.f90 modpk_errorhandling.o
modpk.o: modpk_backgrnd.o modpk.f90 modpk_errorhandling.o modpk_macros.f90

powspec : $(MODPKOBJ) $(PKDRIVER)
	$(F90C) $(F90FLAGS) $(MODPKOBJ) $(PKDRIVER)  $(LINKFLAGS) -o $@

%.o %.mod: %.f90
	$(F90C) $(F90FLAGS) -c $*.f90

clean: cleanoutput
	-rm -f *.o *.a *.d core *.mod
	-rm powspec

cleanoutput:
	-rm fort.*
	-rm *.dat
	-rm out_fields_infl_end.csv
	-rm out_fields_horizon_cross.csv
	-rm out_powerspectra.csv
	-rm out_trajectory.csv
	-rm out_pk_adiab.csv
	-rm out_pk_isocurv.csv
	-rm out_modes*.csv
	-rm out_ic_eqen.csv
	-rm out_ic_eqen_SR.csv
	-rm out_ic_isoN.csv
	-rm out_ic_isoN_SR.csv
	-rm gmon.out
