#gfortran compile options
ifdef GFORTRAN

F90C     = gfortran
FFLAGS = -O3 -funroll-loops -cpp -fopenmp -ffast-math -fdefault-real-8 # -fdefault-real-8

ifdef DEBUG
F90C     = gfortran
FFLAGS = -cpp -O0 -fdefault-real-8 -g -p
endif

#ifort compile options
else

ifdef DEBUG
F90C     = ifort
FFLAGS = -fpp  -g -p -traceback -debug #-O0 -openmp  -fast # -DMPI


else

F90C     = ifort
FFLAGS = -funroll-loops -fpp -O3 -openmp #  -fast # -DMPI

endif

ifdef QUAD
FFLAGS+= -r16
else
FFLAGS+= -r8
endif


endif

include ./Makefile_main_modpk
