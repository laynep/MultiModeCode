#gfortran compile options
ifdef GFORTRAN

LINKFLAGS = -llapack -lblas

F90C     = gfortran
FFLAGS = -O3 -funroll-loops -cpp -fopenmp -ffast-math -fdefault-real-8 -ffree-line-length-none

ifdef DEBUG
F90C     = gfortran
FFLAGS = -cpp -O0 -fdefault-real-8 -g -p  #-Wall
endif

FFLAGS += -ffree-line-length-none

#ifort compile options
else

LINKFLAGS = -mkl

ifdef DEBUG
F90C     = ifort
FFLAGS = -fpp  -g -p -traceback -debug -mkl   #-O0 -openmp  -fast # -DMPI


else

F90C     = ifort
FFLAGS = -funroll-loops -fpp -O3 -openmp #  -fast # -DMPI

endif

ifdef QUAD
FFLAGS+= -r16
else
FFLAGS+= -r8
endif


endif

#For using MKL/LAPACK/BLAS
FFLAGS += -DMKL_EXIST

include ./Makefile_main_modpk
